rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can only access their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Users can only access their own invoices
    match /invoices/{invoiceId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
    }

    // Users can only access their own business info
    match /businessInfo/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Subscription plans are read-only for all authenticated users
    match /subscriptionPlans/{planId} {
      allow read: if request.auth != null;
      allow write: if false; // Only admins should modify plans
    }

    // User subscriptions - users can only access their own
    match /userSubscriptions/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}